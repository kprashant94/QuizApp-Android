<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bfff00">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.prashantkumar.questionhub.QuestAnsActivity"
        android:background="#bfff00">

        <TextView
            android:id="@+id/questionTextV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="25dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false" />


        <Button
            android:id="@+id/optAButton"
            android:onClick="onClickOptA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:background="#ffffff"
            android:padding="5dp"
            android:layout_below="@+id/questionTextV"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/optBButton"
            android:onClick="onClickOptB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="25dp"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:background="#ffffff"
            android:layout_below="@+id/optAButton"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/optCButton"
            android:onClick="onClickOptC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="25dp"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:background="#ffffff"
            android:layout_below="@+id/optBButton"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/optDButton"
            android:onClick="onClickOptD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="25dp"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:background="#ffffff"
            android:layout_below="@+id/optCButton"
            android:textAllCaps="false"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add To Notes"
            android:id="@+id/addToNotesButton"
            android:onClick="onClickButtonAddToNotes"
            android:layout_gravity="right"
            android:visibility="gone"
            android:textColor="#000000"
            android:background="#00ffff"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/optDButton"
            android:layout_centerHorizontal="true"
            android:padding="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/scoreTextV"
            android:visibility="gone"
            android:textColor="#000000"
            android:textSize="50sp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home"
            android:id="@+id/homeButton"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:textColor="#000000"
            android:background="#00ffff"
            android:onClick="onClickButtonHome"
            android:visibility="gone"
            android:layout_below="@+id/scoreTextV"
            android:layout_marginTop="100dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/answerTextV"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/nextButton" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/explanationTextV"
            android:textSize="20dp"
            android:visibility="gone"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/answerTextV" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/nextButton"
            android:onClick="onClickButtonNext"
            android:visibility="gone"
            android:textColor="#000000"
            android:background="#00ffff"
            android:layout_below="@+id/optDButton"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_alignParentRight="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finish"
            android:id="@+id/finishButton"
            android:onClick="onClickButtonFinish"
            android:visibility="gone"
            android:textColor="#000000"
            android:background="#00ffff"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/optDButton"
            android:layout_alignParentLeft="true" />



    </RelativeLayout>
</ScrollView>