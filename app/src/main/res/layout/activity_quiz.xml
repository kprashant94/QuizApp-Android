<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bfff00">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.prashantkumar.questionhub.QuizActivity"
        android:background="#bfff00">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/timerTextV"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/currentScoreTextV"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/scoreTextV"
            android:layout_centerInParent="true"
            android:textColor="#000000"
            android:visibility="gone"
            android:textSize="50sp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/time1TextV"
            android:layout_toRightOf="@+id/scoreTextV"
            android:layout_alignBottom="@+id/scoreTextV"
            android:layout_marginLeft="10dp"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/bestScoreTextV"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/scoreTextV"
            android:textColor="#000000"
            android:visibility="gone"
            android:textSize="30sp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/time2TextV"
            android:layout_toRightOf="@+id/bestScoreTextV"
            android:layout_alignBottom="@+id/bestScoreTextV"
            android:layout_marginLeft="10dp"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/questionTextV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="25sp"
            android:layout_marginTop="50dp"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false" />


        <Button
            android:id="@+id/optAButton"
            android:onClick="onClickOptA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:background="#ffffff"
            android:padding="5dp"
            android:layout_below="@+id/questionTextV"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/optBButton"
            android:onClick="onClickOptB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="25sp"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:background="#ffffff"
            android:layout_below="@+id/optAButton"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/optCButton"
            android:onClick="onClickOptC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="25sp"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:background="#ffffff"
            android:layout_below="@+id/optBButton"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/optDButton"
            android:onClick="onClickOptD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="25sp"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:background="#ffffff"
            android:layout_below="@+id/optCButton"
            android:textAllCaps="false"/>


    </RelativeLayout>
</ScrollView>